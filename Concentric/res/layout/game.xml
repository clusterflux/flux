<RelativeLayout 
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="match_parent" >
	<view
		class="com.clusterflux.concentric.MapView"
		android:id="@+id/map_view"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content" />
	<view
		class="com.clusterflux.concentric.HudView"
		android:id="@+id/hud_view"
		android:layout_width="fill_parent"
		android:layout_height=".3in" 
		android:layout_alignParentBottom="true"/>
	<view
		class="com.clusterflux.concentric.DPadView"
		android:id="@+id/dpad_view"
		android:layout_width=".7in"
		android:layout_height=".7in" 
		android:layout_alignParentBottom="true"
		android:layout_alignParentRight="true"/>
</RelativeLayout>
